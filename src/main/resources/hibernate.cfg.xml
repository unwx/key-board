<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/keyq?serverTimezone=UTC</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="format_sql">true</property>
        <property name="show_sql">true</property>

        <mapping class="unwx.keyB.domains.User"/>
        <mapping class="unwx.keyB.domains.Comment"/>
        <mapping class="unwx.keyB.domains.Article"/>
    </session-factory>
</hibernate-configuration>